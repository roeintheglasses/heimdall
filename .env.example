# Heimdall Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Frontend (Vercel)
# ===================

# GitHub webhook signature verification secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Go backend URL for server-side calls
GO_SERVICE_URL=http://localhost:8080

# Go backend URL for client-side calls (exposed to browser)
NEXT_PUBLIC_GO_SERVICE_URL=http://localhost:8080

# Optional: QStash token for reliable message queuing
# QSTASH_TOKEN=your_qstash_token

# ===================
# Backend (Railway/Go)
# ===================

# PostgreSQL connection string (required)
# Format: postgres://user:password@host:port/database?sslmode=require
DATABASE_URL=postgres://heimdall_user:heimdall_password@localhost:5432/heimdall?sslmode=disable

# Server port (default: 8080)
PORT=8080

# ===================
# Development
# ===================

# Set to 'development' for local development
NODE_ENV=development
